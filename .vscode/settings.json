{
  // vscode
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "dist/**": true,
    "public/back/**": true,
    "public/content-scripts/**": true
  },
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src"
  },

  // 常规 -- 检查使用 eslint 即可
  "javascript.validate.enable": false,
  "typescript.validate.enable": false, //是否启用ts 验证
  "css.validate": false, // 交由 stylelint进行检查
  "less.validate": false,
  "scss.validate": false,

  // eslint
  "eslint.enable": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    // 保存时eslint 修复
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue", "jsx", "tsx"],

  // other
  "cSpell.ignoreWords": ["esbuild", "pnpm", "windi", "unocss", "execa"]
}
